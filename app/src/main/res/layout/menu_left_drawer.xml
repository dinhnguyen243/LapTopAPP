<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <RelativeLayout android:id="@+id/page_menu_ek1"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <View android:id="@+id/_bg__menu_ek2"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="224dp"
                    android:layout_height="823dp" />

                <View
                    android:id="@+id/rectangle_22"
                    android:layout_width="224dp"
                    android:layout_height="823dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp" />

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="29dp"
                    android:contentDescription="rectangle_23"
                    app:srcCompat="@drawable/logo" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="207dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_Customername"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="14dp" />

                <TextView
                    android:id="@+id/txt_Customername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_avatar"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="240dp"
                    android:layout_marginRight="240dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/sign_in_button"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_below="@+id/list"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp">

                </com.google.android.gms.common.SignInButton>

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/sign_out_button"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_below="@+id/list"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="57dp" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>