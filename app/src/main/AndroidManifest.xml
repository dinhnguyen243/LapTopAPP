<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.laptopapp">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/avarta"
        android:label="@string/app_name"
        android:roundIcon="@drawable/avarta"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Laptopapp"
        tools:replace="android:theme"
        >
        <activity android:name=".Activity.MainActivity"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.CartActivity"></activity>
        <activity android:name=".Activity.ProductDetails"></activity>
        <activity android:name=".Activity.Confirm_checkout"></activity>
    </application>

</manifest>